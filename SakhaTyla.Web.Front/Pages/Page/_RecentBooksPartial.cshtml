@using SakhaTyla.Core.Requests.Books
@inject MediatR.IMediator Mediator
@model Models.ArticlesModel

@{
    var books = await Mediator.Send(new GetBooks()
    {
        PageSize = 10,
        PageIndex = 0,
        OrderBy = "Id",
        OrderDirection = Core.Infrastructure.OrderDirection.Descending
    });
}

<h2>Books</h2>

<ul>
    @foreach (var book in books.PageItems)
    {
        <li>
            <a asp-page="./Book" asp-route-synonym="@book.Synonym">@book.Name @book.Authors.Select(a => "(" + a.Author.GetFullName() + ")").FirstOrDefault()</a>
        </li>
    }
</ul>