@using Microsoft.Extensions.Options
@using SakhaTyla.Core.Common
@inject IOptions<ServerOptions> ServerOptions
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sakha Dictionary</title>
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/fontawesome.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/solid.css" />
        <link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.css" />
        <link rel="stylesheet" href="~/lib/jqueryui/themes/base/theme.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/fontawesome.min.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/solid.min.css" />
        <link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.min.css" />
        <link rel="stylesheet" href="~/lib/jqueryui/themes/base/theme.min.css" />
    </environment>    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SakhaTyla.Web.Front.styles.css" asp-append-version="true" />
</head>
<body>
    <partial name="Shared/_HeaderPartial" />
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
        
    <partial name="Shared/_FooterPartial" />

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
        <script src="~/lib/jqueryui/jquery-ui.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/lib/jqueryui/jquery-ui.min.js"></script>
    </environment>    
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        var serverOptions = { apiUrl: '@ServerOptions.Value.ApiUrl' };
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>